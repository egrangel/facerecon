# Production Environment Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration - PostgreSQL for Production
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=facial_recognition_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=facial_recognition_prod
DB_SYNC=false
DB_LOGGING=false

# JWT Configuration - CHANGE THESE SECRETS!
JWT_SECRET=your_super_secure_jwt_secret_key_for_production_minimum_64_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_for_production_minimum_64_characters
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features
SWAGGER_ENABLED=false

# CORS Configuration - Replace with your actual domain
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=error

# SSL/Security Headers
TRUST_PROXY=true
SECURE_COOKIES=true
SESSION_DOMAIN=yourdomain.com

# File Upload Limits
MAX_FILE_SIZE=10mb
MAX_FILES_PER_REQUEST=5

# Rate Limiting
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true
RATE_LIMIT_SKIP_FAILED_REQUESTS=false