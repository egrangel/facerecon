# SQLite Development Configuration (No PostgreSQL required)
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration - SQLite
DB_TYPE=sqlite
DB_DATABASE=./data/facial_recognition.db

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features
SWAGGER_ENABLED=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info